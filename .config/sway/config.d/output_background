# Variables.
set $dleft  HDMI-A-1
set $dright DP-1

# Configuration
output $dleft position 0 0
output $dleft transform 270
output $dleft background ~/pictures/wallpapers/lotr_rivendell_portrait.jpg fill

output $right position 1080 240
output $dright background ~/pictures/wallpapers/lotr_rivendell.jpg          fill

# Mode
mode "output" {
	# Move the current window to the output in the direction.
	bindsym $left  move to output left
	bindsym $up    move to output up
	bindsym $right move to output right
	bindsym $down  move to output down

	# Return to default mode.
	bindsym Backspace mode "default"
}
bindsym $mod+m mode "output"
